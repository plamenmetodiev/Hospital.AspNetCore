@model IEnumerable<DiagnosisServiceModel>
@{
    ViewData["Title"] = "All Diagnoses";
    int i = 1;
}

<h2>@ViewData["Title"]</h2>

@if (User.IsInRole(WebConstants.ManagerRole))
{
    <a asp-action="add" class="btn btn-primary">Add New</a>
    <br />
    <br />
}
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            @if (User.IsInRole(WebConstants.ManagerRole))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>

        @foreach (var diagnose in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@diagnose.Name</td>
                <td>@diagnose.Description</td>
                @if (User.IsInRole(WebConstants.ManagerRole))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@diagnose.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@diagnose.Id" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }

    </tbody>
</table>

