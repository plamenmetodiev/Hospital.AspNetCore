@model IEnumerable<SupplierServiceModel>
@{
    ViewData["Title"] = "Suppliers";
    int count = 1;
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Add" class="btn btn-primary">Add New Supplier</a>

<table class="table table-hover table-bordered table-striped"> 
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Importer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@supplier.Name</td>
                <td><input disabled asp-for="@supplier.IsImporter"/></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@supplier.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

