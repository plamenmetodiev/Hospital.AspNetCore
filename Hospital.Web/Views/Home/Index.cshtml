@model SearchPatientFormModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Welcome to our official web page!</h1>
    <h2 class="text-center">See your medical profile</h2>
</div>

<div class="row">
    <form asp-action="Search">
        <div class="col-md-4">
            <input asp-for="SearchBox" class="form-control" placeholder="Name" />
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-default pull-right" value="Search" />
        </div>
    </form>
</div>
